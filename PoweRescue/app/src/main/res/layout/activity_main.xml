<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/bg">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Contacts"
        android:id="@+id/button1"
        android:layout_marginTop="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#74f70063"
        android:width="150dp"
        android:textStyle="bold"
        android:typeface="sans"
        android:shadowColor="#ff3c3c3c" />

    <!-- <Button
       android:text="View Recordings"
         android:id="@+id/button2"
         android:layout_below="@+id/button3"
         android:layout_centerHorizontal="true"
         android:background="#ffb0b0b0"
         android:width="150dp"
           android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textStyle="bold"
         android:typeface="sans"
         android:shadowColor="#ff3e3e3e" />-->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Access location"
        android:id="@+id/button3"
        android:layout_below="@+id/button1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="#74f70063"
        android:width="150dp"
        android:textStyle="bold"
        android:typeface="sans"
        android:shadowColor="#ff353535" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Message"
        android:id="@+id/button"
        android:background="#74f70063"
        android:width="150dp"
        android:textStyle="bold"
        android:typeface="sans"
        android:shadowColor="#ff353535"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
